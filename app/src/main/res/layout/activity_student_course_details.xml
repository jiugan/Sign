<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.StudentCourseDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/color_gradient"
        app:title="课程详情"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@drawable/color_gradient">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <TextView
                android:id="@+id/details_courseName"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名称"
                android:textSize="30sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/details_collageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名称"
                android:textSize="24sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/details_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="选课"
            android:textSize="18sp"
            android:background="@drawable/btn_selector"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            />

<!--            <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--                android:id="@+id/fab"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:src="@mipmap/round_add_fill"-->
<!--                android:gravity="center"-->
<!--                />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home1"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_serchar_boc1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="学校名称"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/details_collageName1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="邮箱"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_serchar_boc1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="开课时间"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/details_startTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="邮箱"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_serchar_boc1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="结课时间"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/details_endTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="邮箱"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_serchar_boc1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="授课老师"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/details_Teacher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="邮箱"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_serchar_boc1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="是否已选"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/details_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="邮箱"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="58dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="课程简介"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="19sp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/details_declare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="简介"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/color_gradient"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>